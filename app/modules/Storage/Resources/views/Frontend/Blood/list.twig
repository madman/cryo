{% extends "base.twig" %}
{% block content %}

        {% if bloods is iterable %}
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 100px;">Шифр</th>
                        <th style="width: 100px;">Стать</th>
                        <th style="width: 100px;">Група</th>
                        <th style="width: 100px;">Резус</th>
                        <th style="width: 150px;"><small>Перевірка материнської крові</small></th>
                        <th style="width: 150px;"><small>Кількість ЯДК, 10*<sup>6</sup>/мл</small></th>
                        <th style="width: 150px;">Життєздатність, %</th>
                        <th style="width: 100px;">Об'єм</th>
                        <th style="width: 100px;">Кількість</th>
                        <th></th>
                        <th style="width: 20px;"></th>
                    </tr>
                </thead>
                <tbody>
                {% for blood in bloods %}
                    <tr>
                        <td><a href="{{ path('blood/edit', { id: blood.id }) }}">{{ blood.code }}<a/></td>
                        <td>{{ gender(blood.gender) }}</td>
                        <td>{{ blood_group(blood.blood_group) }}</td>
                        <td>{{ blood_rh(blood.rh) }}</td>
                        <td>{{ is_check_mother_blood(blood.is_check_mother_blood) }}</td>
                        <td>{{ blood.jadk }}</td>
                        <td>{{ blood.viability }}</td>
                        <td>{{ blood.volume }}</td>
                        <td>N/a із {{ blood.blood_count }}</td>
                        <td></td>
                        <td><a href="{{ path('blood/delete', { id: blood.id }) }}"><span class="glyphicon glyphicon-remove"></span></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        {% else %}
            <div style="text-align: center; margin-bottom: 20px; margin-top: 20px">
                <h3>{{ 'Ничего не найдено' }}</h3>
            </div>
        {% endif %}

{% endblock %}