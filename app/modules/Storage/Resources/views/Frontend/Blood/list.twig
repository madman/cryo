{% extends "base.twig" %}
{% block content %}

        {% if bloods is iterable %}
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>name</th>
                        <th style="width: 20px;"></th>
                    </tr>
                </thead>
                <tbody>
                {% for blood in bloods %}
                    <tr>
                        <td><a href="{{ path('blood/edit', { id: blood.id }) }}">{{ blood.id }}<a/></td>
                        <td><a href="{{ path('blood/delete', { id: blood.id }) }}"><span class="glyphicon glyphicon-remove"></span></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        {% else %}
            <div style="text-align: center; margin-bottom: 20px; margin-top: 20px">
                <h3>{{ 'Ничего не найдено' }}</h3>
            </div>
        {% endif %}

{% endblock %}