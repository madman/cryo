{% extends "base.twig" %}
{% block content %}

        {% if users is iterable %}
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>name</th>
                        <th>password</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users%}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.password }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        {% else %}
            <div style="text-align: center; margin-bottom: 20px; margin-top: 20px">
                <h3>{{ 'Ничего не найдено' }}</h3>
            </div>
        {% endif %}

{% endblock %}